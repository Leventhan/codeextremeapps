{
    "rules": {
        ".read": "auth != null && auth.admin == true",
        ".write": "auth != null && auth.admin == true",
        "events": {
            ".read": "true",
            ".write": "auth != null",
            "$event": {
                ".validate": "newData.hasChildren(['easting', 'northing', 'lat', 'lng', 'time', 'type'])",
                "type": {
                    ".validate": "newData.isString()"
                },
                "time": {
                    ".validate": "newData.isNumber()"
                },
                "lat": {
                    ".validate": "newData.isNumber()"
                },
                "lng": {
                    ".validate": "newData.isNumber()"
                },
                "easting": {
                    ".validate": "newData.isNumber()"
                },
                "northing": {
                    ".validate": "newData.isNumber()"
                }
            }
        }
    }
}
